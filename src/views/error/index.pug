include ../parcials/head
body
   include ../components/navbar
   main(style="min-height: calc(100vh - 52px - 125px - 4px)")
      section
         .container.mx-auto.py-2
            div.m-2(class="sm:mt-4 lg:max-w-lg lg:mx-auto")
               <div class="bg-red-500 text-white font-bold rounded-t px-4 py-2">
                  | Error: #{error.message} #{error.statusCode}
               </div>
               <div class="border border-t-0 border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700">
                  if error.stack
                     <p class="break-words text-sm">#{error.stack}</p>
                  else
                     p.break-words.text-sm= error.message
               </div>
   include ../components/footer